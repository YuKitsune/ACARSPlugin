<Window x:Class="ACARSPlugin.Windows.HistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:ACARSPlugin"
        xmlns:viewModels="clr-namespace:ACARSPlugin.ViewModels"
        xmlns:controls="clr-namespace:ACARSPlugin.Controls"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=viewModels:HistoryViewModel}"
        Title="CPDLC History"
        Height="320" Width="467"
        MinHeight="24" MinWidth="140"
        d:DesignHeight="640"
        Background="{x:Static local:Theme.BackgroundColor}">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ACARSPlugin;component/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="64"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0" Margin="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Style="{StaticResource GenericTextStyle}"
                       VerticalAlignment="Center"
                       Margin="0,0,8,0"
                       Text="ACID:"/>

            <Grid Grid.Column="1" Width="120" Height="32">
                <TextBox x:Name="CallsignTextBox"
                         Text="{Binding Callsign, UpdateSourceTrigger=PropertyChanged}"
                         VerticalContentAlignment="Center"
                         KeyDown="CallsignTextBox_KeyDown"
                         Visibility="Collapsed"/>

                <Button x:Name="CallsignButton"
                        Content="{Binding CallsignButtonText}"
                        Click="CallsignButton_Click"
                        Style="{StaticResource ButtonBaseStyle}"/>
            </Grid>
        </Grid>

        <controls:BeveledBorder Grid.Row="1" BorderThickness="{x:Static local:Theme.BeveledBorderThickness}" BevelType="Sunken">
            
            <Grid>
                
                <!-- Extended Message Popup -->
                <Popup x:Name="ExtendedMessagePopup"
                       StaysOpen="False"
                       AllowsTransparency="True"
                       Placement="Relative">
                    <Border Background="Transparent"
                            MouseDown="ExtendedMessage_MouseDown">
                        <StackPanel Background="{Binding CurrentlyExtendedMessage.BackgroundColor}">
                            <Grid Margin="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/> <!-- Prefix -->
                                <ColumnDefinition Width="Auto"/> <!-- Time -->
                                <ColumnDefinition Width="Auto"/> <!-- Callsign -->
                                <ColumnDefinition Width="Auto"/> <!-- Full Content -->
                            </Grid.ColumnDefinitions>

                            <!-- Prefix TextBlock -->
                            <TextBlock Grid.Column="0"
                                       Text="{Binding CurrentlyExtendedMessage.Prefix}"
                                       Foreground="{Binding CurrentlyExtendedMessage.ForegroundColor}"
                                       FontFamily="{x:Static local:Theme.FontFamily}"
                                       FontSize="{x:Static local:Theme.FontSize}"
                                       FontWeight="{x:Static local:Theme.FontWeight}"
                                       Margin="0,0,8,0"/>

                            <!-- Time TextBlock -->
                            <TextBlock Grid.Column="1"
                                       Text="{Binding CurrentlyExtendedMessage.Time}"
                                       Foreground="{Binding CurrentlyExtendedMessage.ForegroundColor}"
                                       FontFamily="{x:Static local:Theme.FontFamily}"
                                       FontSize="{x:Static local:Theme.FontSize}"
                                       FontWeight="{x:Static local:Theme.FontWeight}"
                                       Margin="0,0,8,0"/>

                            <!-- Callsign TextBlock (clickable) -->
                            <TextBlock Grid.Column="2"
                                       Text="{Binding CurrentlyExtendedMessage.Callsign}"
                                       Foreground="{Binding CurrentlyExtendedMessage.ForegroundColor}"
                                       FontFamily="{x:Static local:Theme.FontFamily}"
                                       FontSize="{x:Static local:Theme.FontSize}"
                                       FontWeight="{x:Static local:Theme.FontWeight}"
                                       Margin="0,0,8,0"/>

                            <!-- Full Content TextBlock (clickable, unlimited length) -->
                            <TextBlock Grid.Column="3"
                                       Text="{Binding CurrentlyExtendedMessage.FullContent}"
                                       Foreground="{Binding CurrentlyExtendedMessage.ForegroundColor}"
                                       FontFamily="{x:Static local:Theme.FontFamily}"
                                       FontSize="{x:Static local:Theme.FontSize}"
                                       FontWeight="{x:Static local:Theme.FontWeight}"
                                       TextWrapping="NoWrap"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Popup>
                
                <ScrollViewer x:Name="MessagesScrollViewer"
                              Style="{StaticResource CustomScrollViewerStyle}"
                              ScrollChanged="ScrollViewer_ScrollChanged">
                    <ItemsControl ItemsSource="{Binding Dialogues}">
                        <!-- Each DialogueHistoryViewModel -->
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type viewModels:DialogueHistoryViewModel}">
                                <StackPanel>
                                    
                                    <!-- TODO: Consider extracting this into a control we can share with Current Message Window -->
                                    
                                    <!-- Display all messages for this dialogue -->
                                    <ItemsControl ItemsSource="{Binding Messages}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate DataType="{x:Type viewModels:HistoryMessageViewModel}">
                                                <Border x:Name="MessageBorder"
                                                        Background="{Binding BackgroundColor}"
                                                        HorizontalAlignment="Left"
                                                        MouseRightButtonDown="Message_MouseRightButtonDown">
                                                    <StackPanel>
                                                        <!-- Main message line -->
                                                        <Grid Margin="2">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/> <!-- Prefix -->
                                                                <ColumnDefinition Width="Auto"/> <!-- Time -->
                                                                <ColumnDefinition Width="Auto"/> <!-- Callsign -->
                                                                <ColumnDefinition Width="Auto"/> <!-- Content -->
                                                            </Grid.ColumnDefinitions>

                                                            <TextBlock Grid.Column="0"
                                                                       Text="{Binding Prefix}"
                                                                       Foreground="{Binding ForegroundColor}"
                                                                       FontFamily="{x:Static local:Theme.FontFamily}"
                                                                       FontSize="{x:Static local:Theme.FontSize}"
                                                                       FontWeight="{x:Static local:Theme.FontWeight}"
                                                                       Margin="0,0,8,0"/>

                                                            <TextBlock Grid.Column="1"
                                                                      Text="{Binding Time}"
                                                                      Foreground="{Binding ForegroundColor}"
                                                                      FontFamily="{x:Static local:Theme.FontFamily}"
                                                                      FontSize="{x:Static local:Theme.FontSize}"
                                                                      FontWeight="{x:Static local:Theme.FontWeight}"
                                                                      Margin="0,0,8,0"/>

                                                            <TextBlock Grid.Column="2"
                                                                      Text="{Binding Callsign}"
                                                                      Foreground="{Binding ForegroundColor}"
                                                                      FontFamily="{x:Static local:Theme.FontFamily}"
                                                                      FontSize="{x:Static local:Theme.FontSize}"
                                                                      FontWeight="{x:Static local:Theme.FontWeight}"
                                                                      Margin="0,0,8,0"/>

                                                            <TextBlock Grid.Column="3"
                                                                      Text="{Binding Content}"
                                                                      Foreground="{Binding ForegroundColor}"
                                                                      FontFamily="{x:Static local:Theme.FontFamily}"
                                                                      FontSize="{x:Static local:Theme.FontSize}"
                                                                      FontWeight="{x:Static local:Theme.FontWeight}"/>
                                                        </Grid>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </controls:BeveledBorder>
    </Grid>
</Window>
