<UserControl x:Class="ACARSPlugin.Controls.DownlinkMessage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:acarsPlugin="clr-namespace:ACARSPlugin"
             xmlns:viewModels="clr-namespace:ACARSPlugin.ViewModels"
             xmlns:converters="clr-namespace:ACARSPlugin.Converters"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=viewModels:DownlinkMessageViewModel}"
             Height="20">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ACARSPlugin;component/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <converters:TimeConverter x:Key="TimeConverter" />
            
            <Style x:Key="Background" TargetType="Grid">
                <Setter Property="Background" Value="{x:Static acarsPlugin:Theme.CPDLCDownlinkColor}"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding Selected}" Value="True">
                        <Setter Property="Background" Value="{x:Static acarsPlugin:Theme.CPDLCSelectedDownlinkBackgroundColor}"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
                
            <Style x:Key="DownlinkMessageText" TargetType="TextBlock" BasedOn="{StaticResource InteractiveTextStyle}">
                <Setter Property="Foreground" Value="{x:Static acarsPlugin:Theme.CPDLCSelectedDownlinkBackgroundColor}"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding Selected}" Value="True">
                        <Setter Property="Foreground" Value="{x:Static acarsPlugin:Theme.InteractiveTextColor}"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
            
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Style="{StaticResource Background}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="42" />
            <ColumnDefinition Width="18" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <TextBlock
            Grid.Column="0"
            Text="{Binding Received, Converter={StaticResource TimeConverter}}"
            Margin="0,0,2,0"
            Style="{StaticResource DownlinkMessageText}"/>
        
        <Border Grid.Column="1" BorderThickness="1" Margin="2,0,2,0">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Setter Property="BorderBrush" Value="{x:Static acarsPlugin:Theme.CPDLCSelectedDownlinkBackgroundColor}"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Selected}" Value="True">
                            <Setter Property="BorderBrush" Value="{x:Static acarsPlugin:Theme.InteractiveTextColor}"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding StandbySent}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Deferred}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            
            <TextBlock TextAlignment="Center">
                <TextBlock.Style>
                    <Style TargetType="TextBlock" BasedOn="{StaticResource DownlinkMessageText}">
                        <Setter Property="Text" Value=" "/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding StandbySent}" Value="True">
                                <Setter Property="Text" Value="S"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Deferred}" Value="True">
                                <Setter Property="Text" Value="D"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </Border>
        
        <TextBlock Grid.Column="2" Text="{Binding Message}" Margin="2,0,0,0" Style="{StaticResource DownlinkMessageText}"/>
        
    </Grid>
</UserControl>
