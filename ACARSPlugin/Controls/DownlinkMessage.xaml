<UserControl x:Class="ACARSPlugin.Controls.DownlinkMessage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:acarsPlugin="clr-namespace:ACARSPlugin"
             xmlns:viewModels="clr-namespace:ACARSPlugin.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=viewModels:DownlinkMessageViewModel}"
             Height="20">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ACARSPlugin;component/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <Style x:Key="Background" TargetType="Grid">
                
                <Setter Property="Background" Value="{x:Static acarsPlugin:Theme.CPDLCDownlinkColor}"/>
                
                <Style.Triggers>
                    <DataTrigger Binding="{Binding Selected}" Value="True">
                        <Setter Property="Background" Value="{x:Static acarsPlugin:Theme.CPDLCSelectedDownlinkBackgroundColor}"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
                
            <Style TargetType="TextBlock" BasedOn="{StaticResource InteractiveTextStyle}" />
            
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Style="{StaticResource Background}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="44" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <TextBlock Grid.Column="0" Text="12:34"/>
        <Border Grid.Column="1" BorderThickness="1" BorderBrush="{x:Static acarsPlugin:Theme.InteractiveTextColor}">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding StandbySent}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Deferred}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <TextBlock>
                <TextBlock.Style>
                    <Style TargetType="TextBlock" BasedOn="{StaticResource InteractiveTextStyle}">
                        <Setter Property="Text" Value=" "/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding StandbySent}" Value="True">
                                <Setter Property="Text" Value="S"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Deferred}" Value="True">
                                <Setter Property="Text" Value="D"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </Border>
        
        <TextBlock Grid.Column="3" Text="{Binding Message}"/>
        
    </Grid>
</UserControl>
