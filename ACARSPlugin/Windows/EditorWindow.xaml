        <!-- Class Elements Display Area -->
        <ListBox
            Grid.Row="2"
            BorderThickness="2"
            Margin="8"
            ItemsSource="{Binding SelectedMessageClassElements}"/>
        
        <!-- Message Construction Area -->
        <ItemsControl
            Grid.Row="3"
            Margin="8"
            ItemsSource="{Binding ConstructedMessageElements}">
            
            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="{x:Type viewModels:UplinkMessageElementViewModel}">
                    <Grid Margin="0,2,0,2" Height="28">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Line Number Button -->
                        <Button
                            Grid.Column="0"
                            Style="{StaticResource LineNumberButton}">
                            <TextBlock
                                Style="{StaticResource InteractiveTextStyle}"
                                Text="{Binding LineNumber}"/>
                        </Button>
                        
                        <!-- Message Parts -->
                        <controls:BeveledBorder Grid.Column="1" BevelType="Sunken" BorderThickness="{x:Static local:Theme.BeveledBorderThickness}">
                            <ItemsControl
                                ItemsSource="{Binding Parts}"
                                VerticalAlignment="Center"
                                Margin="8,2,0,2">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.Resources>
                                    <!-- Template for Text Parts -->
                                    <DataTemplate DataType="{x:Type viewModels:UplinkMessageTextPartViewModel}">
                                        <TextBlock Text="{Binding Value}" VerticalAlignment="Center" Style="{StaticResource GenericTextStyle}"/>
                                    </DataTemplate>

                                    <!-- Template for Template Parts -->
                                    <DataTemplate DataType="{x:Type viewModels:UplinkMessageTemplatePartViewModel}">
                                        <Button Style="{StaticResource TemplateButton}">
                                            <TextBlock>
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock" BasedOn="{StaticResource InteractiveTextStyle}">
                                                        <!-- Default: Show value if it exists -->
                                                        <Setter Property="Text" Value="{Binding Value}"/>
                                                        <Style.Triggers>
                                                            <!-- If Value is null or empty, show placeholder in brackets -->
                                                            <DataTrigger Binding="{Binding Value}" Value="{x:Null}">
                                                                <Setter Property="Text">
                                                                    <Setter.Value>
                                                                        <MultiBinding StringFormat="[{0}]">
                                                                            <Binding Path="Placeholder"/>
                                                                        </MultiBinding>
                                                                    </Setter.Value>
                                                                </Setter>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Value}" Value="">
                                                                <Setter Property="Text">
                                                                    <Setter.Value>
                                                                        <MultiBinding StringFormat="[{0}]">
                                                                            <Binding Path="Placeholder"/>
                                                                        </MultiBinding>
                                                                    </Setter.Value>
                                                                </Setter>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.Resources>
                            </ItemsControl>
                        </controls:BeveledBorder>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        
        <!-- Action Buttons -->
        <Border Grid.Row="4" BorderThickness="1" BorderBrush="{x:Static local:Theme.GenericTextColor}" Margin="8" Padding="4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <WrapPanel Grid.Column="0">
                    <Button Content="Escape" Style="{StaticResource ActionButton}" Margin="0,0,4,0"/>
                    <Button Content="Restore" Style="{StaticResource ActionButton}" Margin="4,0,4,0"/>
                    <Button Content="Suspend" Style="{StaticResource ActionButton}" Margin="4,0,0,0"/>
                </WrapPanel>
                
                <Button Grid.Column="1" Content="Send" Style="{StaticResource SendButton}" HorizontalAlignment="Right"/>
            </Grid>
        </Border>
    </Grid>
</Window>
